\section Hilite_attribute
\code

  // hilite single Object  (not ApplicationObjects)
  DL_hili_on ((long)DispListIndex);


  // unhilite single Object
  DL_hili_off ((long)DispListIndex);


  // unhilite all Objects
  DL_hili_off (-1L);


\endcode
